<h1>PRODUCTS</h1>
<table border="1">
  <tr>
    <th> Department </th>
    <th> Name </th>
    <th> Price </th>
  </tr>


  <tbody>
    <% @company.products.each do |product| %>
    <tr>
      <td> <%= product.department %></td>
      <td> <%= link_to product.name, company_product_path(@company, product) %></td>
      <td> <%= product.price %></td>
    </tr>
    <% end %>
  </tbody></br>


</table>

<h1> LOCATIONS</h1>
<table border="1">
  <tr>
    <th> City </th>
    <th> Street Name </th>
    <th> State </th>
    <th> Zip Code </th>
    <th> Country </th>
  </tr>


  <tbody>
    <% @company.locations.each do |location| %>
    <tr>
      <td> <%= link_to location.city, company_location_path(@company, location) %></td>
      <td> <%= location.street_name %></td>
      <td> <%= location.state %></td>
      <td> <%= location.zip_code %></td>
      <td> <%= location.country %></td>
    </tr>
    <% end %>
  </tbody>


</table></br>
<%= link_to 'Back', companies_path %>
